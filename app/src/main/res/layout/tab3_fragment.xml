<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="Installment"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/txttabefragment3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/txttabefragment3"
        android:id="@+id/clse1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp">
        <TextView
            android:id="@+id/txttabfragmentclas1"
            android:textColor="@color/dray"
            android:gravity="center"
            android:text="First Clase"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/txttabfragmentclaseprice"
            android:textColor="@color/dray"
            android:gravity="center"
            android:text="100$"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>




    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"

        android:id="@+id/clase2"
        android:layout_below="@id/clse1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp">

        <TextView
            android:id="@+id/txttabfragmentclas2"
            android:textColor="@color/dray"
            android:gravity="center"
            android:text="Second Clase"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/txttabfragmentclase2price"
            android:textColor="@color/dray"
            android:gravity="center"
            android:text="150$"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>




    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="10dp"

        android:id="@+id/clase3"
        android:layout_below="@id/clase2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp">

        <TextView
            android:id="@+id/txttabfragmentclas3"
            android:textColor="@color/dray"
            android:gravity="center"
            android:text="Third Clase"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/txttabfragmentclase3price"
            android:textColor="@color/dray"
            android:gravity="center"
            android:text="200$"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>




    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/clase4"
        android:layout_below="@id/clase3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp">

        <TextView
            android:id="@+id/txttabfragmentclas4"
            android:textColor="@color/dray"
            android:gravity="center"
            android:text="Fourth Clase"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/txttabfragmentclase4price"
            android:textColor="@color/dray"
            android:gravity="center"
            android:text="250$"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>




    </LinearLayout>
    <LinearLayout
        android:id="@+id/clase5"
        android:layout_below="@id/clase4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/txttabfragmentclas5"
            android:textColor="@color/dray"
            android:gravity="center"
            android:text="Fifth Clase"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/txttabfragmentclase5price"
            android:textColor="@color/dray"
            android:gravity="center"
            android:text="300$"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>




    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"

        android:id="@+id/clase6"
        android:layout_below="@id/clase5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="10dp">

        <TextView
            android:id="@+id/txttabfragmentclas6"
            android:textColor="@color/dray"
            android:gravity="center"
            android:text="Sixth Clase"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/txttabfragmentclase6price"
            android:textColor="@color/dray"
            android:gravity="center"
            android:text="400$"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>

    </LinearLayout>




    <LinearLayout
       android:layout_below="@id/clase6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

    <Button
        android:id="@+id/btntabeSingnin"
        android:background="@drawable/shape_btn"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="10dp"
        android:text="@string/signin"
        android:textColor="@color/colorPrimary"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        />
    </LinearLayout>

</RelativeLayout>